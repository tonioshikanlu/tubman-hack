    <View android:id="@+id/button_shadow_more_info" android:background="#ff000000" android:visibility="invisible" android:layout_width="100dp" android:layout_height="30dp" android:layout_marginBottom="40dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:layout_marginEnd="90dp"/>
    <TextView android:textColor="#490d82" android:gravity="center" android:id="@+id/more_info" android:background="@drawable/button_stroke_more_info" android:visibility="gone" android:layout_width="100dp" android:layout_height="30dp" android:layout_marginBottom="50dp" android:text="More Info" android:layout_alignParentBottom="true" android:layout_marginStart="10dp" android:layout_alignStart="@+id/button_shadow_more_info"/>
</RelativeLayout>
