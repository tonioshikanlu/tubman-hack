    <View android:id="@+id/button_shadow" android:background="#ff000000" android:visibility="invisible" android:layout_width="180dp" android:layout_height="40dp" android:layout_marginBottom="100dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:layout_marginEnd="90dp"/>
